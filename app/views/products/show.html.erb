<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>          <dd> </dd>
          <dd>&nbsp;</dd>
          <dd>&nbsp;</dd>
          <dt> Reviews </dt>
          <% @reviews.each do |review|%>
            <dd><%= review.rating %> </dd>
            <dd><%= review.description %> </dd>
            <% if @current_user == review.user_id %>
            <%= button_to 'Delete ', product_review_url(@product, review), method: :delete %>
            <% end %>
            <dd>&nbsp;</dd>
            <dd>&nbsp;</dd>
            <% end %>
            <% if current_user == nil %>
            <dd> Please sign up or log in to add review!</dd>
            <% else %>
            <%= form_for :review, url: product_reviews_path(@product) do |f| %>
              <h2>New review</h2>
              <%= f.text_field :description %><br>
              <%= f.select :rating, [1,2,3,4,5] %>
              <%= f.submit("Create Review") %><br>
             <% end %>

            <% end %>
        </dl>
      </div>
    </div>
  <div>

  </div>


  </article>

</section>
